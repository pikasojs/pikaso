{
  "name": "pikaso",
  "version": "2.3.0",
  "description": "Seamless, headless and fully-tested library for Canvas",
  "author": "Ramin Mousavi <ramin.mousavy@gmail.com> (http://github.com/raminious)",
  "license": "MIT",
  "scripts": {
    "typecheck": "tsc",
    "commitlint": "commitlint",
    "typedoc": "typedoc",
    "test": "npm-run-all test:unit test:e2e --parallel",
    "test:unit": "jest",
    "test:e2e": "cypress run",
    "coverage": "jest --coverage",
    "_postinstall": "husky install",
    "prepublish": "pinst --disable",
    "postpublish": "pinst --enable",
    "clean": "rimraf lib && rimraf esm && rimraf umd",
    "build": "npm run clean && rollup -c"
  },
  "dependencies": {
    "deepmerge": "^4.2.2",
    "konva": "^8.3.1",
    "typescript": "^4.5.5"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.16.7",
    "@commitlint/cli": "^16.0.1",
    "@commitlint/config-conventional": "^16.0.0",
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-node-resolve": "^13.1.2",
    "@rollup/plugin-typescript": "^8.3.0",
    "@types/jest": "^27.4.0",
    "@types/jsdom": "^16.2.14",
    "@types/node": "^17.0.5",
    "@typescript-eslint/eslint-plugin": "^5.8.1",
    "@typescript-eslint/parser": "^5.8.1",
    "babel-jest": "^27.4.5",
    "canvas": "^2.8.0",
    "cypress": "^9.2.0",
    "datauri": "^4.1.0",
    "eslint": "^8.5.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-webpack": "^0.13.2",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jest": "^25.3.3",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "jest": "^27.4.5",
    "jest-canvas-mock": "^2.3.1",
    "jsdom": "^19.0.0",
    "npm-run-all": "^4.1.5",
    "pinst": "^2.1.6",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.62.0",
    "rollup-plugin-ignore": "^1.0.10",
    "rollup-plugin-terser": "^7.0.2",
    "ts-jest": "^27.1.2",
    "ts-node": "^10.4.0",
    "tslib": "^2.3.1",
    "typedoc": "^0.22.10"
  },
  "keywords": [
    "canvas",
    "drawing",
    "graphic",
    "crop",
    "rotate",
    "shape",
    "draw",
    "flip",
    "text",
    "pencil",
    "konva",
    "fabric"
  ],
  "browser": {
    "canvas": false,
    "jsdom": false
  },
  "bugs": {
    "url": "https://github.com/pikasojs/pikaso/issues"
  },
  "homepage": "https://github.com/pikasojs/pikaso",
  "readmeFilename": "README.md",
  "repository": {
    "type": "git",
    "url": "git://github.com/pikasojs/pikaso.git"
  },
  "typings": "esm/index.all.d.ts",
  "module": "esm/index.all.js",
  "main": "lib/index.all.js",
  "unpkg": "umd/pikaso.min.js",
  "sideEffects": false,
  "files": [
    "esm",
    "lib",
    "umd",
    "LICENSE",
    "README"
  ]
}
